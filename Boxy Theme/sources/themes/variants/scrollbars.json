// Scrollbars <%= ui.variant.name %> Styles
// ===========================================================================

// Scrollbar Default
// ---------------------------------------------------------------------------

//
// Vertical Scrollbar Puck
//

{
  "class": "puck_control",
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical.png"
},

{
  "class": "puck_control",
  "settings": ["theme_scrollbar_line"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical_line.png"
},

{
  "class": "puck_control",
  "settings": ["theme_scrollbar_rounded"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical_rounded.png"
},

//
// Horizontal Scrollbar Puck
//

{
  "class": "puck_control",
  "attributes": ["horizontal"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal.png"
},

{
  "class": "puck_control",
  "attributes": ["horizontal"],
  "settings": ["theme_scrollbar_line"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal_line.png"
},

{
  "class": "puck_control",
  "attributes": ["horizontal"],
  "settings": ["theme_scrollbar_rounded"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal_rounded.png"
},

// Scrollbar Overlayed
// ---------------------------------------------------------------------------

//
// Vertical Scrollbar Puck
//

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical_overlay.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_scrollbar_line"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical_overlay_line.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_scrollbar_rounded"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_vertical_overlay_rounded.png"
},

//
// Horizontal Scrollbar Puck
//

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars"],
  "attributes": ["horizontal"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal_overlay.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_scrollbar_line"],
  "attributes": ["horizontal"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal_overlay_line.png"
},

{
  "class": "puck_control",
  "settings": ["overlay_scroll_bars", "theme_scrollbar_rounded"],
  "attributes": ["horizontal"],
  "layer0.texture": "Boxy Theme/assets/variants/<%= ui.variant.id %>/scrollbars/puck_horizontal_overlay_rounded.png"
},
